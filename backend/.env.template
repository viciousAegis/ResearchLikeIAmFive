# Environment Configuration Template
# Copy this to .env and fill in your values

# Required - Google Gemini API Key
GOOGLE_API_KEY=your_api_key_here

# Optional - Environment (development/production)
ENVIRONMENT=development

# Optional - Allowed CORS origins for production (comma-separated)
# ALLOWED_ORIGINS=https://yourapp.com,https://www.yourapp.com

# Optional - Allowed hosts for production (comma-separated)
# ALLOWED_HOSTS=yourapp.com,www.yourapp.com

# Optional - Rate limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# Optional - Request limits
MAX_REQUEST_SIZE=1048576
MAX_URL_LENGTH=2048

# Optional - API Key security (set to true to require API keys)
API_KEY_REQUIRED=false

# Optional - Valid API keys (comma-separated, only if API_KEY_REQUIRED=true)
# VALID_API_KEYS=key1,key2,key3

# Optional - Redis URL for advanced rate limiting (future feature)
# REDIS_URL=redis://localhost:6379
